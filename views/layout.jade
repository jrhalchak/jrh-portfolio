doctype
html
  head
    title=(title ? title : 'JRH Portfolio')
    link(rel='stylesheet' href='/styles_bundle.css')
  body(class=(isHome ? 'is-home' : '') style!=(page ? page.pageBgCSS : ''))
    .wrapper.row
      .grid-1-1
        .header(class=(isHome ? 'header--home' : ''))
          nav.header__nav
            a(href='/').header__logo
              img(src='svg')
            -if(pageList && pageList.length) {
            each page in pageList
              a(href='/page/#{page.title}').header__nav-item= page.title
            -}
        block content
